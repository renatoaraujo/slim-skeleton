{
  "name": "renatoaraujo/slim-skeleton",
  "description": "Skeleton Application for Slim Framework",
  "homepage": "http://github.com/renatoaraujo/slim-skeleton",
  "type": "library",
  "keywords": [
    "microframework",
    "Slim Framework",
    "DoctrineORM",
    "Twig",
    "Monolog"
  ],
  "authors": [
    {
      "name": "Renato Rodrigues de Araujo",
      "email": "renato.r.araujo@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "slim/slim": "^3.5",
    "monolog/monolog": "^1.19",
    "doctrine/orm": "^2.5"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Skeleton\\": "src/Skeleton"
    }
  },
  "autoload-dev": {
      "psr-4": {
        "Skeleton\\": "tests/Skeleton"
      }
  },
  "scripts": {
    "test": "./bin/phpunit"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5"
  },
  "config": {
    "bin-dir": "bin"
  }
}
