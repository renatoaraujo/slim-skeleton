{
    "name": "renatoaraujo/slim-skeleton",
    "description": "Skeleton Application for Slim Framework",
    "authors": [
        {
            "name": "Renato Araujo",
            "email": "renato.r.araujo@gmail.com",
            "role": "Software Engineer"
        }
    ],
    "require": {
        "slim/slim": "^3.4",
        "slim/twig-view": "^2.1",
        "monolog/monolog": "^1.19",
        "doctrine/orm": "^2.5"
    }, 
    "require-dev": {
		"phpunit/phpunit": "^5.4",
		"filp/whoops": "^2.1",
        "zeuxisoo/slim-whoops": "^0.5.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Skeleton\\": "app/src/"
        }
    },
	"config": {
		"bin-dir": "bin"
	},
    "scripts": {
		"post-install-cmd": [
			"php -r \"copy('app/config/config.example.php', 'app/config/config.php');\""
		],
		"test": "./bin/phpunit"
	}
}
